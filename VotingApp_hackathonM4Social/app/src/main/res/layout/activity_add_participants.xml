<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.organization.eventcreation.AddParticipantsActivity">

<TextView
    android:gravity="center"
    android:layout_margin="80dp"
    android:layout_gravity="center_horizontal"
    android:text="Add participants to the event"
    android:textColor="@color/colorPrimary"
    android:textSize="24sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="add single participant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="load group of participants from csv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Invite organization to participate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>